<div id="content">

    <section class="leds edit">

        <div class="settings">

            <form action="/api" method="post">

                <h2><i class="fa fa-cog fa-small" aria-hidden="true"></i>Edit settings</h2>

                <p class="edit-msg">Maximum range when it possibly damages your eyes (cm)</p>
                <input name="red" type="range" min="0" max="50" value="{{data.settings.red}}" oninput="outputUpdateChild(value)" id="child">
                <output for="child" id="child-out">{{data.settings.red}}</output><br />

                <p class="edit-msg">Minimal range when it's okay for your eyes (cm)</p>
                <input name="green" type="range" min="60" max="200" value="{{data.settings.green}}" oninput="outputUpdateAdult(value)" id="adult">
                <output for="adult" id="adult-out">{{data.settings.green}}</output><br />

                <button type="submit" class="button">Update</button>

            </form>

        </div>

    </section>

</div>